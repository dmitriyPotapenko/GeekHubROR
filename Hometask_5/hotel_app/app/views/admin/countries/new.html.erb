<h1> New Country </h1>

<%= link_to 'Countries', admin_continent_countries_path(:continent_id) %>
<%= ' | ' %>
<%= link_to 'Home Page', root_path %><br><br>
<%= form_with scope: :country, url: admin_continent_countries_path, local: true do |f| %>
<%= 'Name:' %><br><br>
<%= f.text_field :name %><br><br>
<%= 'Select Country Flag:' %>
<%= f.file_field :avatar %><br><br>
<%= f.submit %>
<% end %>