<h1> New Continent </h1>

<%= link_to 'Continents', continents_path %>
<%= ' | ' %>
<%= link_to 'Home Page', root_path %><br><br>
<%= form_for @continent do |f| %>
  <%= f.label :name %><br><br>
  <%= f.text_field :name %><br><br>
  <%= f.file_field :image %><br><br>
  <%= f.fields_for :countries do |ff| %>
    <%= ff.label :name, 'Country name' %><br><br>
    <%= ff.text_field :name %><br><br>
  <% end %>
<%= f.submit %>
<% end %>